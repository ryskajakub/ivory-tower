{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "checkJs": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "dist",
    "target": "ESNext",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
